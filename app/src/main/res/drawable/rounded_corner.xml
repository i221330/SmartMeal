<!-- res/drawable/rounded_corner.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Rounded corners for message bubble -->
    <corners android:radius="12dp"/>
    <!-- Background color for light mode -->
    <solid android:color="#FFFFFFFF"/>
    <!-- Thin subtle border -->
    <stroke android:width="1dp" android:color="#FFE6E6E6"/>
    <!-- Optional content padding (keeps text away from edges) -->
    <padding android:left="8dp" android:top="6dp" android:right="8dp" android:bottom="6dp"/>
</shape>
