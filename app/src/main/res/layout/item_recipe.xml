<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/primary"
            android:contentDescription="Recipe image" />

        <!-- Recipe Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasta Alfredo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creamy pasta with parmesan"
                android:textSize="13sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ 25 min"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/recipeDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Easy"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/recipeIngredientCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥˜ 7 items"
                    android:textSize="12sp"
                    android:textColor="@color/primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_gravity="center_vertical"
            app:tint="#CCCCCC"
            android:contentDescription="View recipe" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

