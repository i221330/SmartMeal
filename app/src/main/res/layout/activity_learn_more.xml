<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ActivityLearnMore">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="@string/back"
            app:tint="@color/text_light" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Learn More"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_light"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- What is SmartMeal Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is SmartMeal?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SmartMeal is your AI-assisted recipe and meal planning companion that helps you make the most of what you already have in your pantry. Our intelligent system suggests recipes based on your available ingredients, creates weekly meal plans, and maintains your shopping list â€” all in one convenient app."
                android:textSize="16sp"
                android:textColor="@color/text_light"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Key Features Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥˜ Smart Recipe Suggestions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get recipe recommendations based on what's in your pantry. SmartMeal ranks recipes by how many ingredients you already have, so you can cook with minimal shopping."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ—“ï¸ Weekly Meal Planning"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan your entire week with breakfast, lunch, and dinner. Organize your meals and never worry about 'what's for dinner' again."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥« Pantry Management"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keep track of what you have at home. Add items with photos, track expiry dates, and always know what's available before you cook."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›’ Smart Shopping Lists"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Automatically add missing ingredients from recipes to your shopping list. Check off items as you shop and sync across devices."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- How to Use Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Use SmartMeal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1ï¸âƒ£ Add items to your pantry"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go to the Pantry tab and add ingredients you have at home. You can take photos and track quantities."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2ï¸âƒ£ Browse suggested recipes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check the Home screen for recipe suggestions. Green tags mean you have all ingredients, yellow means you're missing some."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3ï¸âƒ£ Plan your meals"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use the Meal Planner to schedule recipes for the week. Drag and drop recipes to breakfast, lunch, or dinner slots."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4ï¸âƒ£ Create shopping lists"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Missing ingredients? Tap 'Add to Shopping List' on any recipe. Check items off as you shop."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5ï¸âƒ£ Use the AI Assistant"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filter recipes by cooking time, cuisine type, dietary preferences, or specific ingredients using our smart assistant."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

            <!-- FAQ Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <!-- FAQ 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q: How does SmartMeal know what recipes I can make?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A: SmartMeal compares the ingredients in each recipe with what you've added to your pantry. It calculates a match score and prioritizes recipes where you have most or all ingredients available."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q: Does my data sync across devices?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A: Yes! Your pantry, shopping lists, and meal plans sync automatically when you're online. You can access your data from any device where you're logged in."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q: Can I add my own recipes?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A: Absolutely! You can create custom recipes with your own ingredients, cooking instructions, and photos. Your recipes will be included in smart suggestions based on your pantry."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q: How do I filter recipes by dietary preferences?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A: Use the AI Assistant to filter recipes by vegetarian, vegan, gluten-free, or other dietary preferences. You can also filter by cuisine type, cooking time, and difficulty level."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q: Will I get notifications for expiring pantry items?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A: Yes! SmartMeal sends push notifications when items in your pantry are approaching their expiry date, helping you reduce food waste and use ingredients before they spoil."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Call to Action -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to start cooking smarter? Head back to the home screen and begin adding items to your pantry!"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

