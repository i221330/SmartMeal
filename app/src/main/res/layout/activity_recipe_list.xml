<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".RecipeListActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_light"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recipes"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_light" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Search"
                app:tint="@color/text_light" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/search_recipes_ingredients"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="#99112811"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/surface_light"
            app:boxCornerRadiusTopStart="999dp"
            app:boxCornerRadiusTopEnd="999dp"
            app:boxCornerRadiusBottomStart="999dp"
            app:boxCornerRadiusBottomEnd="999dp"
            app:hintTextColor="#99112811">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="text"
                android:textColor="@color/text_light" />

        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="999dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="textEnd"
                    app:iconSize="16dp"
                    app:iconTint="@color/text_light" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/diet"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/surface_light"
                    android:textColor="@color/text_light"
                    app:cornerRadius="999dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="textEnd"
                    app:iconSize="16dp"
                    app:iconTint="@color/text_light" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Cuisine"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/surface_light"
                    android:textColor="@color/text_light"
                    app:cornerRadius="999dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="textEnd"
                    app:iconSize="16dp"
                    app:iconTint="@color/text_light" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout"
        tools:listitem="@layout/item_recipe" />

    <include
        android:id="@+id/bottomNavLayout"
        layout="@layout/bottom_navigation_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

