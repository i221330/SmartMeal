<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ActivityMealPlanner">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/meal_planner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_light"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Add"
            app:tint="@color/text_light" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Previous"
                    app:tint="@color/text_light" />

                <TextView
                    android:id="@+id/monthTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="May 2024"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:gravity="center" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:rotation="180"
                    android:contentDescription="Next"
                    app:tint="@color/text_light" />

            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:rowCount="6"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="S"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="M"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="T"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="W"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="T"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:text="S"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99111811"
                    android:gravity="center"
                    android:padding="8dp" />

                <!-- Calendar days would go here - simplified for now -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="3"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_light"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="4"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/text_light"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="5"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="@color/text_light"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="6"
                    android:text="4"
                    android:textSize="16sp"
                    android:textColor="@color/text_light"
                    android:gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="0"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="1"
                    android:text="6"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_columnWeight="1"
                    app:layout_column="2"
                    android:text="7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="8dp" />

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/breakfast"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="8:00 AM"
                            android:textSize="14sp"
                            android:textColor="#99111811" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="#3319e619"
                        android:textColor="@color/text_light"
                        app:cornerRadius="999dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lunch"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="12:00 PM"
                            android:textSize="14sp"
                            android:textColor="#99111811" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="#3319e619"
                        android:textColor="@color/text_light"
                        app:cornerRadius="999dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dinner"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="6:00 PM"
                            android:textSize="14sp"
                            android:textColor="#99111811" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="#3319e619"
                        android:textColor="@color/text_light"
                        app:cornerRadius="999dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Similar meal cards for Tuesday would go here -->

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/bottomNavLayout"
        layout="@layout/bottom_navigation_planner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

