<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ActivityMealPlanner">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Planner"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_light"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/currentDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 7, 2025"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Days of Week Selector -->
    <HorizontalScrollView
        android:id="@+id/daysScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Sunday -->
            <LinearLayout
                android:id="@+id/daySun"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/daySunLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/daySunDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Monday -->
            <LinearLayout
                android:id="@+id/dayMon"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dayMonLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/dayMonDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:id="@+id/dayTue"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dayTueLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/dayTueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Wednesday -->
            <LinearLayout
                android:id="@+id/dayWed"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dayWedLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/dayWedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:id="@+id/dayThu"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dayThuLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/dayThuDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:id="@+id/dayFri"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dayFriLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/dayFriDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Saturday -->
            <LinearLayout
                android:id="@+id/daySat"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/day_selector_background"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/daySatLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/daySatDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Selected Date Display -->
    <TextView
        android:id="@+id/selectedDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today - Saturday, Dec 7"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/daysScrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Meals Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectedDateText"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Breakfast Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/breakfastCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ³ Breakfast"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addBreakfastButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:textSize="12sp"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/breakfastMealText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No meal planned"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lunch Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/lunchCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¥— Lunch"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addLunchButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:textSize="12sp"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lunchMealText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No meal planned"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Dinner Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dinnerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ½ï¸ Dinner"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_light" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addDinnerButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:textSize="12sp"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/dinnerMealText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No meal planned"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#99111811"
                android:contentDescription="@string/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPantry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#99111811"
                android:contentDescription="@string/pantry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pantry"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPlanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_today"
                app:tint="@color/primary"
                android:contentDescription="@string/planner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/planner"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navShopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#99111811"
                android:contentDescription="@string/shopping" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#99111811"
                android:contentDescription="@string/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

