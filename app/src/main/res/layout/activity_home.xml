<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ActivityHome">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="@string/settings"
            app:tint="@color/text_light" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:gravity="center" />

            <TextView
                android:id="@+id/syncStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sync_status"
                android:textSize="10sp"
                android:textColor="#99112811"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/addMealButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/add_meal"
            app:tint="@color/text_light" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todays_meals"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#80FFFFFF"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/breakfast"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#99111811" />

                            <TextView
                                android:id="@+id/breakfastTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Avocado Toast with Poached Egg"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:id="@+id/breakfastTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Prep: 5 min | Cook: 10 min"
                                android:textSize="12sp"
                                android:textColor="#99111811" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/breakfastImage"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginStart="16dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:contentDescription="@string/breakfast" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#80FFFFFF"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lunch"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#99111811" />

                            <TextView
                                android:id="@+id/lunchTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Quinoa Salad with Grilled Chicken"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:id="@+id/lunchTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Prep: 15 min | Cook: 20 min"
                                android:textSize="12sp"
                                android:textColor="#99111811" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/lunchImage"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginStart="16dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:contentDescription="@string/lunch" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#80FFFFFF"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dinner"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#99111811" />

                            <TextView
                                android:id="@+id/dinnerTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Salmon with Roasted Vegetables"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dinnerTime"
                                android:text="Prep: 10 min | Cook: 25 min"
                                android:textSize="12sp"
                                android:textColor="#99111811" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/dinnerImage"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginStart="16dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:contentDescription="@string/dinner" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipes_you_can_make"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestedRecipe1"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/suggestedRecipeImage1"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/recipe_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/suggestedRecipeTitle1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pasta Alfredo"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/suggestedRecipeStatus1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/all_ingredients_available"
                                    android:textSize="11sp"
                                    android:textColor="@color/primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestedRecipe2"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/suggestedRecipeImage2"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/recipe_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/suggestedRecipeTitle2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tomato Soup"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/suggestedRecipeStatus2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/missing_items"
                                    android:textSize="11sp"
                                    android:textColor="#FFA000"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestedRecipe3"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/suggestedRecipeImage3"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/recipe_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/suggestedRecipeTitle3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Caesar Salad"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/suggestedRecipeStatus3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/all_ingredients_available"
                                    android:textSize="11sp"
                                    android:textColor="@color/primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestedRecipe4"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/suggestedRecipeImage4"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/recipe_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/suggestedRecipeTitle4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Recipe"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/suggestedRecipeStatus4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Loading..."
                                    android:textSize="11sp"
                                    android:textColor="@color/primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestedRecipe5"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/suggestedRecipeImage5"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/recipe_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/suggestedRecipeTitle5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Recipe"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/suggestedRecipeStatus5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Loading..."
                                    android:textSize="11sp"
                                    android:textColor="@color/primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_actions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recipeListButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recipe List"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/learnMoreButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Learn More"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#3319e619"
                    android:textColor="@color/text_light"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/aiAssistantButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_assistant"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary"
                android:textColor="@color/text_light"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="@color/primary"
                android:contentDescription="@string/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPantry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#99111811"
                android:contentDescription="@string/pantry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pantry"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPlanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_today"
                app:tint="#99111811"
                android:contentDescription="@string/planner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/planner"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navShopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#99111811"
                android:contentDescription="@string/shopping" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#99111811"
                android:contentDescription="@string/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textSize="12sp"
                android:textColor="#99111811" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
