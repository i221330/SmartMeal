<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Ingredient Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avocado"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_light" />

        <TextView
            android:id="@+id/ingredientQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe needs: 2"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/ingredientPantryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… You have: 2"
            android:textSize="14sp"
            android:textColor="@color/primary" />

    </LinearLayout>

    <!-- Quantity Input -->
    <LinearLayout
        android:id="@+id/quantityInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/quantityInput"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/text_light_accent"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:hint="Amount" />

    </LinearLayout>

</LinearLayout>

