<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartMeal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_light</item>
        <item name="colorOnSurfaceVariant">@color/text_light</item>

        <!-- Text input colors -->
        <item name="android:textColorHint">@color/text_light_accent</item>
        <item name="android:textColor">@color/text_light</item>

        <!-- Material3 specific colors -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.SmartMeal" parent="Base.Theme.SmartMeal" />

    <!-- Custom AlertDialog Theme -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/text_light</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/text_light</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton</item>
    </style>

    <style name="MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>